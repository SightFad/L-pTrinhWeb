@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<body>
    <main>
        <section class="product-header">
            <h1>Wallets</h1>
        </section>
        <div style="position: relative;">
            <a href="javascript:history.back()" class="back-btn">Back</a>
            <section class="product-page container">
                <div class="product-image">
                    <img src="~/Content/assets/images/products/wallet.png" alt="Wallet">
                </div>

                <div class="product-info">
                    <h2>Modern Stylish Wallet</h2>
                    <p>
                        Stylish and contemporary wallet crafted from premium materials, designed with a sleek, minimalist silhouette.
                        It features RFID protection, multiple card slots, a slim cash compartment, and a hidden pocket for extra security.
                        Perfect for the modern individual who values both form and function, this wallet offers a blend of elegance and practicality.
                        Available in a range of modern colors and textures.
                    </p>
                    <div class="price">$20</div>
                    <button class="buy-now">Buy Now</button>
                </div>
            </section>
        </div>
    </main>
</body>

